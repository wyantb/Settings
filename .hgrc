[pager]
pager = LESS='FRX' less
attend = annotate, cat, diff, export, glog, log, qdiff, shortlog, slog, hist, status

[web]
#allow_push = *
#push_ssl = false

[color]
qseries.applied = magenta bold
status.modified = magenta bold

[alias]
slog =     log --template '{rev}:{node|short} {date|shortdate} | ({branches} {bookmarks}) {desc|strip|firstline} [{author|person}]\n'
shortlog = log --template '{rev}:{node|short} {date|shortdate} | ({branches} {bookmarks}) {desc|strip|firstline} [{author|person}]\n'
hist = shortlog -G
bm = bookmark
